{
  "name": "no-huddle",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass --output-style compressed -o css dev/scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 10' -r css/*.css",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "browserify dev/js/*.js | uglifyjs -c -m > js/main.js",
    "watch:css": "onchange 'dev/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'dev/js/*.js' -- npm run build:js",
    "serve": "browser-sync start --server --files '*.html, css/*.css, js/*.js' --no-open",
    "dev": "npm-run-all --parallel serve watch:*"
  },
  "author": "Julien van der Kluft",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^2.1.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "jquery": "^3.0.0",
    "normalize.css": "^4.1.1",
    "webfontloader": "^1.6.24"
  }
}
